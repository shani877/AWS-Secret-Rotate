{
    "Version": "2012-10-17",  # ğŸ“… Policy version â€” always use this standard version

    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "secretsmanager:DescribeSecret",           # ğŸ“˜ Describe the secret's metadata
                "secretsmanager:GetSecretValue",           # ğŸ“¥ Read secret values
                "secretsmanager:PutSecretValue",           # ğŸ“¤ Write updated secret values
                "secretsmanager:UpdateSecretVersionStage"  # ğŸ”„ Manage versions/stages of the secret
            ],
            "Resource": "SecretARN"  # ğŸ· Replace this with your actual secret's ARN
        },

        {
            "Effect": "Allow",
            "Action": [
                "secretsmanager:GetRandomPassword"  # ğŸ” Allows generating random passwords via API
            ],
            "Resource": "*"  # ğŸŒ Works globally since this is non-secret-specific
        },

        {
            "Effect": "Allow",
            "Action": [
                "ec2:CreateNetworkInterface",     # ğŸ›  Needed for Lambda in VPC
                "ec2:DeleteNetworkInterface",     # âŒ Delete unused ENIs
                "ec2:DescribeNetworkInterfaces",  # ğŸ” View ENI info
                "ec2:DetachNetworkInterface"      # ğŸ”“ Detach if needed
            ],
            "Resource": "*"  # ğŸŒ Allows for any ENI (network interfaces)
        }
    ]
}
